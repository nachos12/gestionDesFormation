{% extends 'base.html.twig' %}

{% block title %}Organisme index{% endblock %}

{% block body %}
    <h1>Organisme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for organisme in organismes %}
            <tr>
                <td>{{ organisme.id }}</td>
                <td>{{ organisme.nom }}</td>
                <td>{{ organisme.adresse }}</td>
                <td>{{ organisme.numeroTel }}</td>
                <td>{{ organisme.emailContact }}</td>
                <td>
                    <a href="{{ path('app_organisme_show', {'id': organisme.id}) }}">voir</a>
                    <a href="{{ path('app_organisme_edit', {'id': organisme.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_organisme_new') }}">Nouveau Organisme</a>
{% endblock %}
